<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.laerton.questao_01.questao01">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:scaleType="fitCenter"
            android:src="@mipmap/logo"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="JUAN PARENTE"
            android:layout_weight="0"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@android:color/holo_blue_light"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:rowCount="2"
                android:columnCount="2"
                android:orientation="vertical"
                android:layout_weight="0"
                android:layout_gravity="center"


                >

                <ImageButton
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:background="@drawable/redondo"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="0dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/notificacao"
                    android:onClick="btnAlerta"
                    android:layout_weight="1"

                    />
                <ImageButton
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:background="@drawable/redondo"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="0dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/grade"
                    android:onClick="btnAlerta"

                    />
                <ImageButton
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:background="@drawable/redondo"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="false"
                    android:src="@mipmap/data2"
                    android:onClick="btnAlerta"


                    />
                <ImageButton
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:background="@drawable/redondo"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:scaleType="centerCrop"
                    android:paddingTop="10dp"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/chat2"
                    android:onClick="btnOuvidoria"
                    />
            </GridLayout>
        </HorizontalScrollView>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
